[flake8]
max-line-length = 88
select = C,E,F,W,B,B902,B903,B904,B950
extend-ignore =
    # For black compatibility
    E203,
    E501,
    # Ignore "f-string is missing placeholders"
    F541,
    # allow bare except
    E722, B001
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    static,
    templates,
    # migrations are generated by alembic
    migrations,
    docs,
    shell.py

per-file-ignores =
    # ignore unused imports in __init__
    __init__.py:F401
